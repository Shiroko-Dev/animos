generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum AnimeStatus {
  FINISHED_AIRING
  CURRENTLY_AIRING
  UNKNOWN
}

model Anime {
  malId    Int         @id
  title    String
  synopsis String
  image    String
  score    Float
  genre    String
  rating   String
  status   AnimeStatus

  providers AnimeProvider[]
}

model AnimeProvider {
  malId      Int
  provider   String
  providerId String

  anime Anime @relation(fields: [malId], references: [malId])

  @@id([malId, provider])
}

model Episode {
  id         String @id @default(uuid())
  number     Int
  animeMalId Int
  length     Int?

  @@unique([animeMalId, number, length])
}

model EpisodeProvider {
  provider          String
  episodeProviderId String // episodeId in provider
  episodeNumber     Int
  animeId           Int

  source    String? @db.VarChar(512)
  episodeId String?
  title     String?

  @@id([provider, episodeProviderId])
}
